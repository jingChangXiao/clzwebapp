/*全局样式*/
html {
  height: 100%;
  width: 100%;
}
body{
  background-color: #ffffff;
  color: #4e4e4e;
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
  -webkit-overflow-scrolling: touch;
}
*{
    margin: 0;
    padding: 0;
}

.app-page-root {
  height: 100%;
  overflow:hidden;
  box-sizing: border-box;
  padding-top: .45rem;
}
.body-content{
  background-color: #ffffff;
}
.full-content {
  width: 100%;
  height: 100%;
}
.marginTop13 {
  margin-top: .13rem;
}
.marginTop20 {
  margin-top: .20rem;
}
.marginTop25 {
  margin-top: .25rem;
}
input::-webkit-input-placeholder {
  color:#999999;
}
input:-moz-placeholder {
  color:#999999;
}
input::-moz-placeholder {
  color:#999999;
}
input:-ms-input-placeholder {
  color:#999999;
}
.demo-flat-button {
  height: .45rem;
  line-height: .45rem;
  color: white;
  font-size: .16rem;
  margin-top: .25rem;
  border-radius: .22rem;
  text-align: center;
  background-color: #41bdc7;
}
.demo-flat-button.active:active {
  background-color: #41bdc7a6;
}
.disabled {
  background-color: #dbdbdb;
  color: #ffffff;
}

ul,li{
    list-style: none;
}


.noShadow{
    box-shadow: none !important;
    -webkit-box-shadow: none !important;
    -moz-window-shadow: none !important;
}
